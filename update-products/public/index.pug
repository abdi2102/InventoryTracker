html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Update Products
        link(rel="icon", href="/Users/abdi/InventoryTracker/images/refresh.png")
        style 
            include index.css
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.8.1/css/bootstrap-select.css"> 
    body 
        div.mainDiv
                div.formDiv            
                    form#mainForm(action="#")
                        div.formTitleHeader
                            h3.mainHeader Updating 
                            input#sheetNameInput(type="text" placeholder="UNSPECIFIED" )
                        div.labelInputDiv
                            label#startLabel Start
                            input#startRowInput(type="number" placeholder=2)
                        div.labelInputDiv
                            label#numProductsLabel Number of Products
                            input#numProductsInput(type="number" placeholder="0" )
                        div.labelInputDiv
                            label#sheetLinkLabel Spreadsheet Link
                            input#sheetLinkInput(type="text" placeholder="sheet link" )
                        div.labelInputDiv 
                            label#updateOptions Options
                            select.selectPicker#optionsSelectPicker(name="optionsSelectPicker" multiple title="Query Options")
                                optgroup(label="Merchant" data-max-options="1")               
                                    option(value="amazon" selected) Amazon 
                                    option(value="walmart") Walmart 
                                optgroup(label="Template" data-max-options="1") 
                                    option(value="fbShops" selected) Facebook Shops
                                optgroup(label="Custom")
                                    option(value="retries") Allow Retries
                                    option(value ="updateAll") Update All Products         
                        button#mainFormStartButton(type="submit" onclick="startProductUpdates(event)") Update
                        button#mainFormPauseButton(type="button" onclick="stopProductUpdates()") Pause
                        p#serverMsg 
                    table#googleSheetsLinksTable
                        thead 
                            th Saved Sheets
                        tbody 
                            tr
                table.table#requestStatsTable 
                    thead 
                        th  Last 10 Completions
                        tr
                                <th scope="col">Date</th>
                                <th scope="col">Merchant</th>
                                <th scope="col">Product Count</th>
                                <th scope="col">Completion Time (min)</th>
                    tbody 
                        <td>03/12/2023</td>
                        <td>Amazon</td>
                        <td>25</td>
                        <td>12.9</td>
                        </tr>
